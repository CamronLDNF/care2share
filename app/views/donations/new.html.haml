= form_with scope: :donations, url: donations_path, local: true do |form|
    %p
        = form.label :enter_your_donation
        %br/
        = form.number_field :amount
    %p
        = form.label :first_name
        %br/
        = form.text_field :firstname
    %p
        = form.label :last_name
        %br/
        = form.text_field :lastname
    %p
        = form.label :email
        %br/
        = form.email_field :email
    %p
        = form.label :postal_code
        %br/
        = form.number_field :postalcode

    %p
        = form.submit 'Proceed to pay'