= form_with scope: :donations, url: donations_path, local: true do |form|
    - if @campaign.errors.any?
        #error_explanation
            %h2
                = pluralize(@campaign.errors.count, "error")
                prohibited
                this campaign from being saved:
            %ul
                - @campaign.errors.full_messages.each do |msg|
                    %li= msg   
    %p
        = form.label :enter_your_Donation
        %br/
        = form.number_field :donation_amount
    %p
        = form.label :first_name
        %br/
        = form.text_field :firstname
    %p
        = form.label :last_name
        %br/
        = form.text_field :lastname
    %p
        = form.label :email
        %br/
        = form.email_field :email
    %p
        = form.label :postal_code
        %br/
        = form.number_field :postalcode

    %p
        = form.submit 'Proceed to pay'