.login
    %a{href: root_path}
        .logo
    - if user_signed_in?
        %p#hello_name= "Hello, #{current_user.firstname}!"
        %p.link= link_to 'Log out', destroy_user_session_path, method: :delete
        %p.link= link_to 'Manage your account', admin_path
        %p.link= link_to 'How It works', information_path
    - else
        %p.link= link_to 'Sign up', new_user_registration_path
        %p.link= link_to 'Log in', new_user_session_path
        %p.link= link_to 'How it works', information_path